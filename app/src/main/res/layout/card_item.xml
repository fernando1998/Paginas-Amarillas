<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imagen_card"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titulo_card"
                android:text="tittle"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/direcion_card"
                android:layout_below="@+id/titulo_card"
                android:text="direccion"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/telefono_card"
                android:layout_below="@id/direcion_card"
                android:text="telefono"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/btn_detalle"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/telefono_card"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                android:drawableEnd="@android:drawable/ic_menu_edit"
                android:onClick="detalle"
                android:text="detalle" />

        </RelativeLayout>

    </LinearLayout>




</android.support.v7.widget.CardView>